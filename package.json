{
  "name": "the-listener",
  "version": "1.0.0",
  "description": "Set listeners for mouse, touch and pointer events without conflicts",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && babel src --presets babel-preset-es2015 -d lib && rm -rf dist && webpack ./lib/index.js ./dist/TheListener.js && webpack -p ./lib/index.js ./dist/TheListener.min.js",
    "prepublish": "npm run build"
  },
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafrex/the-listener.git"
  },
  "keywords": [
    "event listener",
    "touch events",
    "pointer events",
    "mouse events",
    "mouse",
    "touch"
  ],
  "author": "Rafael Pedicini <code@rafrex.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafrex/the-listener/issues"
  },
  "homepage": "https://github.com/rafrex/the-listener#readme",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "^3.1.1",
    "eslint-config-airbnb-base": "^4.0.2",
    "eslint-plugin-import": "^1.11.1",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "detect-it": "^1.1.0"
  }
}
